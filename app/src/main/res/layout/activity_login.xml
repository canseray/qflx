<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoginActivity"
        android:background="#000">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/quizflixa"
            android:id="@+id/imageView2"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/username_edittext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:textSize="14sp"
            android:textColorHint="#FFF"
            android:background="@drawable/login_edittext_background"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint=" E-Mail veya Kullanıcı adı"
            android:ems="10"
            android:id="@+id/username_edittext"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginBottom="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/password_edittext"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:textSize="14sp"
            android:background="@drawable/login_edittext_background"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:hint=" Parola"
            android:textColorHint="#FFF"
            android:ems="10"
            android:id="@+id/password_edittext"
            app:layout_constraintStart_toStartOf="@+id/username_edittext"
            app:layout_constraintTop_toBottomOf="@+id/username_edittext"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/login_button"/>

    <Button
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:background="@drawable/login_button_background"
            android:text="Oturum Aç"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/login_button"
            app:layout_constraintTop_toBottomOf="@+id/password_edittext"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/login_button"
            android:layout_marginBottom="42dp" app:layout_constraintBottom_toTopOf="@+id/facebook_login">
        <TextView
                android:textSize="16dp"
                android:text="Kullanıcı hesabınız yok mu?"
                android:textColor="@color/lightgrey"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/lineartext1"
                android:layout_weight="1"/>
        <TextView
                android:textSize="16dp"
                android:textColor="@color/red"
                android:text="Hemen oluşturun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/create_account"
                android:layout_weight="1"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/facebookcolor"
            app:cardCornerRadius="10dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/facebook_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/google_login">
        <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="40dp">
            <ImageView
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/facebookicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            <TextView
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="#FFF"
                    android:text=" Facebook ile giriş yap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>





    <android.support.v7.widget.CardView
            app:cardBackgroundColor="#FFF"
            app:cardCornerRadius="10dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/google_login"
            app:layout_constraintTop_toBottomOf="@+id/facebook_login"
            android:layout_marginBottom="103dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">
        <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="40dp">
            <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/googleicon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            <TextView
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:text="  Google ile giriş yap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>