<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkgrey">


    <TextView
            android:text="Soru soru soru soru soru soru soru soru soru soru soru?"
            android:textSize="24sp"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:paddingHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/question_textview"/>
    <Button
            android:text="Button"
            android:layout_width="350dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/correct_answer_button_background"
            android:id="@+id/a_answer"
            app:layout_constraintTop_toBottomOf="@+id/question_textview"
            android:layout_marginTop="40dp"
            />
    <Button
            android:text="Button"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/wrong_answer_button_background"
            android:id="@+id/b_answer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a_answer"
            android:layout_marginTop="20dp"
            />
    <Button
            android:text="Button"
            android:layout_width="370dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/quiz_button_background"
            android:id="@+id/c_answer"
            app:layout_constraintTop_toBottomOf="@id/b_answer"
            android:layout_marginTop="20dp"
           />
    <Button
            android:text="Button"
            android:layout_width="370dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/quiz_button_background"
            android:id="@+id/d_answer"
            app:layout_constraintTop_toBottomOf="@id/c_answer"
            android:layout_marginTop="20dp"
           />
</android.support.constraint.ConstraintLayout>