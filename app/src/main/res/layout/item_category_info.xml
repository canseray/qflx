<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/page_background">

    <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="#FFF"/>

    <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori adı"
            android:textStyle="bold"
            android:id="@+id/category_info_name"
            app:layout_constraintBottom_toTopOf="@+id/category_info_img"
            android:gravity="center"
            android:textSize="24sp"/>

    <ImageView
            app:layout_constraintTop_toBottomOf="@+id/category_info_name"
            android:layout_marginTop="16dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@color/white"
            android:foregroundGravity="center"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/category_info_img"/>
    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:foregroundGravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/category_info_img"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/category_info_info"
            android:text="b bla info blaaaaaaaa"/>



    <android.support.v7.widget.CardView
            app:layout_constraintTop_toBottomOf="@+id/category_info_info"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/start_cardview"
            android:foregroundGravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/red">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red">

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/play"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quize Başla"
                    android:textColor="#FFF"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>